{
  "rules": {
    ".read": "root.child('users/'+auth.uid+'/isAdmin').val() === true",
    ".write": "root.child('users/'+auth.uid+'/isAdmin').val() === true",
    "actorData": {
      "$actorId": {
        ".indexOn": "timestamp"
      }
    },
    "sensorData": {
      "$sensorId": {
        ".indexOn": "timestamp"
      }
    },
    "devices": {
      "$deviceId": {
        // Device {
        //   key: string;
        //   name: string;
        //   // ------ ACTOR -------
        //   iconClass?: string;
        //   // ------ SENSOR -------
        //   // Umidade: 20 - 80
        //   // Temperatura: 15 - 25
        //   type?: string | 'Temperatura' | 'Umidade';
        //   unit?: string | 'ÂºC' | '%';
        //   max?: number;
        //   min?: number;
        ".read": "auth.uid != null && root.child('userSites/'+auth.uid+'/'+$siteId).exists()"
      }
    },
    "sites": {
      "$siteId": {
        // key?: string;
        // name: string;
        // sensors: {[key: string]: Device};
        // actors: {[key: string]: Device};
        ".read": "auth.uid != null && root.child('userSites/'+auth.uid+'/'+$siteId).exists()"
      }
    },
    "siteFake": {
      ".read": true,
      ".write": true
    },
    "users": {
      "$uid": {
        ".read": "auth.uid != null && auth.uid === $uid",
        ".write": "auth.uid != null && auth.uid === $uid"
      }
    },
    "userSites": {
      "$uid": {
        ".read": "auth.uid != null && auth.uid === $uid",
        ".write": "root.child('users/'+auth.uid+'/isAdmin').val() === true"
      }
    }
  }
}